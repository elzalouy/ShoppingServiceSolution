@model ShoppingService.Models.Account_Model

@{
    ViewBag.Title = "NewAccount";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal col-md-6 container">
        <h3>Register</h3>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-10">
                <label>User Name</label>
                @Html.EditorFor(model => model.Account_UserName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Account_UserName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <label>Email</label>
                @Html.TextBoxFor(model => model.AccountEmail,null, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.AccountEmail, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <label>Password</label>
                @Html.TextBoxFor(model => model.Account_HashPass,null, new { @class = "form-control", @type = "password"  })
                @Html.ValidationMessageFor(model => model.Account_HashPass, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                Birth Date
                @Html.TextBoxFor(model => model.BirthDate,null,   new { @class = "form-control" , @type="date"})
                @Html.ValidationMessageFor(model => model.BirthDate, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<script src="~/Scripts/jquery-3.0.0.js"></script>
<script src="~/Scripts/jquery-3.0.0.min.js"></script>
<script src="~/Scripts/bootstrap.js"></script>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/font-awesome.css" rel="stylesheet" />